<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.buckminster.remote.providers">
      <provider
            ID="cloudsmith"
            hostname="rmap.cloudsmith.com"
            initializationPath="/json-rpc-bridge/resolutionService"
            loginSupport="true"
            name="Cloudsmith"
            protocol="http"
            port="80"
            servicePath="/json-rpc/resolutionService">
      </provider>
      <provider
            ID="cloudsmith.test"
            hostname="test.cloudsmith.com"
            initializationPath="/json-rpc-bridge/resolutionService"
            loginSupport="true"
            name="Cloudsmith Test"
            protocol="http"
            port="80"
            servicePath="/json-rpc/resolutionService">
      </provider>
      <provider
            ID="cloudsmith.local"
            hostname="localhost"
            initializationPath="/json-rpc-bridge/resolutionService"
            loginSupport="true"
            name="Cloudsmith Local"
            protocol="http"
            port="8080"
            servicePath="/json-rpc/resolutionService">
      </provider>
   </extension>
   <extension
         point="org.eclipse.buckminster.core.queryResolvers">
      <queryResolver id="cloudsmith" priority="10">
         <factory class="org.eclipse.buckminster.remote.resolver.jsonrpc.RemoteResolverFactory">
            <parameter
                  name="provider"
                  value="cloudsmith"/>
         </factory>
      </queryResolver>
      <queryResolver id="cloudsmith.test">
         <factory class="org.eclipse.buckminster.remote.resolver.jsonrpc.RemoteResolverFactory">
            <parameter
                  name="provider"
                  value="cloudsmith.test"/>
         </factory>
      </queryResolver>
      <queryResolver
            id="cloudsmith.local">
         <factory class="org.eclipse.buckminster.remote.resolver.jsonrpc.RemoteResolverFactory">
            <parameter
                  name="provider"
                  value="cloudsmith.local"/>
         </factory>
      </queryResolver>
   </extension>
      <extension
         id="cssite.authentication"
         name="CSSite Authentication"
         point="org.eclipse.buckminster.jnlp.authentication">
      <authenticator
            class="org.eclipse.buckminster.remote.cloudsmith.accountservice.Publisher"
            id="com.cloudsmith.cssite.accountservice.Publisher"/>
   </extension>
   <extension
         id="cssite.publication"
         name="CSSite Publication"
         point="org.eclipse.buckminster.jnlp.publication">
      <publisher
            class="org.eclipse.buckminster.remote.cloudsmith.accountservice.Publisher"
            id="com.cloudsmith.cssite.accountservice.Publisher"/>
   </extension>
   <extension
         id="cssite.componentInfo"
         name="CSSite Component Info"
         point="org.eclipse.buckminster.jnlp.componentInfo">
      <componentInfoProvider
            class="org.eclipse.buckminster.remote.cloudsmith.componentinfo.ComponentInfoProvider"
            is="com.cloudsmith.cssite.componentinfo.ComponentInfoProvider">
      </componentInfoProvider>
   </extension>
</plugin>
