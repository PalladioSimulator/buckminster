<?xml version="1.0" encoding="UTF-8"?>
<cspecExtension
	xmlns:com="http://www.eclipse.org/buckminster/Common-1.0"
	xmlns="http://www.eclipse.org/buckminster/CSpec-1.0">

	<artifacts>
		<public name="feature.xml" path="feature.xml"/>
	</artifacts>

	<actions>
		<public name="create.buckminster.product" actor="ant">
            <actorProperties>
                <property key="buildFileId" value="buckminster.pdetasks"/>
                <property key="targets" value="create.eclipse.product"/>
            </actorProperties>
            <properties>
                <property key="buckminster.eclipse.productFile" value="buckminster.product"/>
                <property key="buckminster.eclipse.deleteuilauncher" value="true"/>
            </properties>
			<prerequisites alias="action.requirements">
				<attribute name="feature.runtimes"/>
				<attribute name="product.root.files"/>
			</prerequisites>
            <products alias="action.output" base="${buckminster.output}/">
                <path path="buckminster/"/>
            </products>
		</public>
	</actions>
</cspecExtension>
